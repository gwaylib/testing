// 调用例子

var (
	userInfoQsql = &qsql.Template{
		CountSql: `
SELECT 
    count(1) 
FROM 
    %s
WHERE
    mobile = ?
`,
		DataSql: `
SELECT 
    mobile "手机号"
FROM 
    %s
WHERE
    mobile = ?
ORDER BY
    mobile
LIMIT ?, ? -- 须带有这两个参数
`,
	}
)

func Query(){
    // ..
	total, titles, result, err := qsql.QueryList(
		database.GetDB("./db.cfg", "master"),
		userInfoQsql.FmtTempate("user_info_200601"),
        currPage*10, 10, 
		"13800130000")
	if err != nil {
		if !errors.ErrNoData.Equal(err) {
			log.Debug(errors.As(err, mobile, pid, uid))
			return c.String(500, "系统错误")
		}
		// 空数据
	}
}
